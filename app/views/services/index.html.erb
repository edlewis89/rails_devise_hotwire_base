<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="mt-5 mb-3">Services</h1>

      <table class="table">
        <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @services.each do |service| %>
          <tr>
            <td><%= service.name %></td>
            <td><%= service.description %></td>
            <td>
              <div class="row">
                <div class="col">
                  <%= link_to 'Edit', edit_service_path(service), class: "btn btn-secondary mr-1" %>
                </div>
                <div class="col">
                  <%= link_to 'Delete', service, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <%= link_to 'New Service', new_service_path, class: "btn btn-success btn-lg mb-4" %>
    </div>
  </div>
</div>