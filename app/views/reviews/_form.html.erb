<%= form_with(model: review, local: true, class: "needs-validation", data: {controller: 'autocompletion'}) do |form| %>
  <% if review.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>
      <ul>
        <% review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="mb-3 max-w-xs mx auto bg-white">

    <div data-controller="autocomplete" data-autocomplete-url-value="/contractors//autocomplete">
      <input type="text" class="w-full" data-autocomplete-target="input" placeholder="Type to search..."/>
      <ul data-autocomplete-target="results"></ul>
    </div>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %>
  <%= form.hidden_field :contractor_id, value: @contractor.id %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :rating, class: "form-label" %>
    <%= form.number_field :rating, min: 1, max: 5, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label "Review", class: "form-label" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <%= form.submit "Submit", class: "btn btn-primary" %>
<% end %>
