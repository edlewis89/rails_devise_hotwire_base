<div class="container">
  <h1>Contractor Profiles</h1>

  <div id="contractors">
    <%= will_paginate @contractors, renderer: BootstrapPagination::Rails %>

    <% if @contractors.any? %>
      <%= render @contractors %>
    <% else %>
      <div class="alert alert-info" role="alert">
        No contractors found.
      </div>
    <% end %>

    <%= will_paginate @contractors, renderer: BootstrapPagination::Rails %>
  </div>
  <div class="text-right">
    <% if current_user.admin? %>
      <%= link_to "New contractor", new_contractor_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
