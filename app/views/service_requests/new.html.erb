<div class="container">
  <h1>Create a Service Request</h1>
  <%= form_with(model: @service_request, url: service_requests_path, method: :post, class: "mt-4") do |f| %>
    <% if @service_request.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@service_request.errors.count, "error") %> prohibited this service request from being saved:</h2>
        <ul>
          <% @service_request.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <div class="mb-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label 'Photo', class: "form-label" %>
      <%= f.file_field :image, class: "form-control"  %>
    </div>

    <div class="mb-3">
      <%= f.label :service_id, class: "form-label" %>
      <%= f.collection_select :service_id, Service.all, :id, :name, { prompt: "Select service" }, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :location, class: "form-label" %>
      <%= f.text_field :location, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :budget, class: "form-label" %>
      <%= f.number_field :budget, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :timeline, class: "form-label" %>
      <%= f.text_field :timeline, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>