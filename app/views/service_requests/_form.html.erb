<%= simple_form_for(@service_request, html: { class: "form-horizontal" }) do |form| %>
<h1>New Service Request</h1>
  <% if @service_request.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@service_request.errors.count, "error") %> prohibited this service request from being saved:</h2>
      <ul>
        <% @service_request.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label 'Photo', class: "control-label col-sm-4" %>
    <div class="col-sm-8">
      <% if @service_request.image_data.present? %>
        <%= image_tag @service_request.image_data.url, class: "img-fluid" %>
      <% end %>
      <%= form.file_field :image_data %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :status, class: "form-label" %>
    <%= form.text_field :status, class: "form-control", disabled: true %>
  </div>


  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <!-- Service selection -->
  <%= form.label :services, "Services Needed" %>
  <% Service.all.each do |service| %>
    <div class="form-check">
      <%= form.check_box :service_ids, { multiple: true }, service.id, nil %>
      <%= form.label "service_ids_#{service.id}", service.name, class: "form-check-label" %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :location, class: "form-label" %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :budget, class: "form-label" %>
    <%= form.number_field :budget, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :timeline, class: "form-label" %>
    <%= form.text_field :timeline, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :range, class: "form-label" %>
    <%= form.text_field :range, class: "form-control" %>
  </div>

<!--  <div class="mb-3">-->
    <%#= form.label :service_id, class: "form-label" %>
    <%#= form.collection_select :service_id, Service.all, :id, :name, { prompt: "Select service" }, class: "form-control" %>
<!--  </div>-->

  <div class="d-grid">
    <%= form.submit "Submit", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>