<%= simple_form_for(@service_request, html: { class: "form-horizontal" }) do |form| %>

  <% if @service_request.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@service_request.errors.count, "error") %> prohibited this service request from being saved:</h2>
      <ul>
        <% @service_request.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label 'Photo', class: "control-label col-sm-4" %>
    <div class="col-sm-8">
      <%= form.file_field :image  %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :location, class: "form-label" %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :budget, class: "form-label" %>
    <%= form.number_field :budget, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :timeline, class: "form-label" %>
    <%= form.text_field :timeline, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :type_of_work_id, class: "form-label" %>
    <%= form.collection_select :type_of_work_id, TypeOfWork.all, :id, :name, { prompt: "Select type of work" }, class: "form-control" %>
  </div>

  <div class="d-grid">
    <%= form.submit "Submit", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>