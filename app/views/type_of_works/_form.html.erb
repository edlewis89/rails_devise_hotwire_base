<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mt-5 mb-3">New Type of Work</h2>

      <%= form_with(model: type_of_work, local: true, class: "needs-validation") do |form| %>
        <% if type_of_work.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h2><%= pluralize(type_of_work.errors.count, "error") %> prohibited this type of work from being saved:</h2>

            <ul>
              <% type_of_work.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control", required: true %>
        </div>

        <div class="actions">
          <%= form.submit "Submit", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>