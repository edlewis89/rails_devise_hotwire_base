<!-- app/views/messages/_form.html.erb -->

<%= form_with(model: @message, url: messages_path, remote: true) do |form| %>
  <div>
    <%= form.label :recipient_id %>
    <%= form.text_field :recipient_id %>
  </div>
  <div>
    <%= form.label :subject %>
    <%= form.text_field :subject %>
  </div>
  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <%= form.submit %>
<% end %>