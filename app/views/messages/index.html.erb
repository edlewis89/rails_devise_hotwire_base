<% if @over_ten %>
  <%= link_to 'Show Previous', '?m=all', class: "btn btn-primary mb-3" %>
<% end %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card mt-5">
        <div class="card-body">
          <% @messages.each do |message| %>
            <% if message.body %>
              <% user = User.find(message.user_id) %>
              <div class="media mb-3">
                <div class="media-body">
                  <h5 class="mt-0"><strong><%= user.email %></strong><%= message.message_time %></h5>
                  <div class="list-group">
                    <div class="list-group-item">
                      <i class="fa fa-chevron-right mr-1" aria-hidden="true"></i>
                      <%= message.body %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <%= form_for [@conversation, @message], html: {class: "ui reply form"} do |f| %>
        <div class="form-group">
          <%= f.text_area :body, class: "form-control", placeholder: "Type your reply here..." %>
        </div>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <div class="form-group">
          <%= f.submit "Add Reply", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>




